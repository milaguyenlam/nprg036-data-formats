{
    "$schema": "https://json-schema.org/draft/2019-09/schema",

    "Offer": {
        "type": "array",
        "items":{
            "Id": "integer",
            "type": "string",
            "StartDate": {
                "type":"string",
                "format":"date"
            },
            "EndDate": {
                "type":"string",
                "format":"date"
            },
            "Price": {
                "type": "number",
                "minimum": 0    
            },
            "Discount": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
            },
            "Availability": {
                "type": "integer"
            },
            "Description": "string",
            "OfferedBy": {
                "Id": "integer",
                "type": "string",
                "Address": "string",
                "OpeningHours": "string",
                "Rating": {
                    "type": "array",
                    "items": {
                        "Id": "integer",
                        "StarRating": "integer"
                    }
                },
                "BranchOf": {
                    "Id": "integer",
                    "Name": "string",
                    "Dic": "string",
                    "Rating": {
                        "type": "array",
                        "items": {
                            "Id": "integer",
                            "StarRating": "integer"
                        }
                    },
                }
            },
            "ItemOffered": {
                "Id": "integer",
                "type": "string",
                "Name": "string",
                "Description": "string",
                "Rating": {
                    "type": "array",
                    "items": {
                        "Id": "integer",
                        "StarRating": "integer"
                    }
                },
            },
            "MadeBy": {
                "Id": "integer",
                "type": "string",
                "Name": "string",
                "Dic": "string",
                "Rating": {
                    "type": "array",
                    "items": {
                        "Id": "integer",
                        "StarRating": "integer"
                    }
                },
                "ProductionCapacity": "integer"
            },
            "Category": {
                "Id": "integer",
                "InternalName": "string",
                "AlternateName": "string"
            },
            "Picture": {
                "Id": "integer",
                "type": "string",
                "Height": "integer",
                "Width": "integer",
                "URI": {
                    "type": "string",
                    "format": "uri"  
                }
            }
        }
    }
}
